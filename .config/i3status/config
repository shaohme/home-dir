general {
        colors = true
        interval = 1
}

order += "cpu_usage"
# order += "memory"
order += "tztime local"

cpu_usage {
        format = "%usage"
}

# memory {
#         format = "%used"
#         threshold_degraded = "1G"
#         format_degraded = "MEMORY < %available"
# }

tztime local {
        format = "%d-%m %H:%M"
}
